 generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Video {
  id String @id @default(uuid())
  name String
  path String // path neste projeto Ã© para salvar o arquivo localmente, evitando o uso de uma S3 por exemplo, que necessita de cartao de credito
  transcription String?
  createdAt DateTime @default(now())
}

model Prompt {
  id String @id @default(uuid())
  title String
  template String
}